<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey_color"
    android:padding="@dimen/margin">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/confirmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_enter_confirmation_code"
        android:backgroundTint="@color/light_gray_vpay"
        android:inputType="phone"
        android:textColor="@color/colorPrimaryLight"
        app:met_textColor="@android:color/white"
        app:met_floatingLabel="normal"
        app:met_textColorHint="@color/light_gray_vpay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_resend"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
